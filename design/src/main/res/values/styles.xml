<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialogStyle" parent="Theme.Design.BottomSheetDialog">
<!--        <item name="android:windowIsFloating">false</item>-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BaseButton" parent="Widget.AppCompat.Button">
        <item name="android:elevation">0dp</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="SolidButton" parent="BaseButton">
        <item name="android:background">@drawable/bg_button_solid</item>
    </style>
    <style name="StrokeButton" parent="BaseButton">
        <item name="android:background">@drawable/bg_button_stroke</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>
</resources>